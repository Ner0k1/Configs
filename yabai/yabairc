
# setup
sudo yabai --load-sa
yabai -m signal --add event=dock_did_restart action="sudo yabai --load-sa"


# layout
yabai -m config	layout bsp
yabai -m config	window_placement second_child

# windows
yabai -m config								\
	window_zoom_persist				on 		\
	split_ratio						0.50	\
    display_arrangement_order		default \
# padding
yabai -m config 							\
	top_padding						10		\
	bottom_padding					10		\
	left_padding					10		\
	right_padding					10		\
	window_gap 						10		\
	auto_balance					on		


# mouse
yabai -m config 							\
	mouse_modifier					alt		\
	mouse_action1					move	\
	mouse_action2					resize	\
	mouse_drop_action				swap	\
	mouse_follows_focus				on		\

# apps
yabai -m rule --add app="^IntelliJ IDEA$" space=2

# no manage apps
yabai -m rule --add app="^Calculator$" manage=off
yabai -m rule --add app="^System Settings$" manage=off
yabai -m rule --add app="^TextEdit$" manage=off
yabai -m rule --add app="^WhatsApp$" space=3
yabai -m rule --add app="^Prism Launcher$" space=4 
yabai -m rule --add app="^java$" space=4
yabai -m rule --add app="^Telegram$" space=3
yabai -m rule --add app="^Obsidian$" space=1
yabai -m rule --add app="^Wezterm$" space=1
yabai -m rule --add app="^Emacs$" manage=on space=1
echo "yabai conf is loaded"




